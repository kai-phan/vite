{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowUmdGlobalAccess": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
  },
  "include": [
    "src",
    "vite.d.ts",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "types": [
    "node",
    "jest"
  ],
  "references": [
    {
      "path": "./tsconfig.vite.json"
    }
  ]
}